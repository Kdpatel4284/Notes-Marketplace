@{

    IPagedList<Notes_MarketPlace.Db.SellerNotes> Model = ViewBag.NoteList;
    List<Notes_MarketPlace.Db.Users_New> UserData = ViewBag.UserData;
    List<Notes_MarketPlace.Db.NoteCategories> NC = ViewBag.NotesCategories;
    List<Notes_MarketPlace.Db.NumberofDownloads> DownloadData = ViewBag.DownloadData;
}


