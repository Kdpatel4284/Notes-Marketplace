<!--=========== Downloaded  part ===================--->
<section id="dash">

    <!-- container -->
    <div class="container">
        <!-- title and  button row -->
        <div class="row" id="row_1">

            <div class="col-sm-12">
                <div class="deash_title_btn">
                    <h2> Downloaded Notes</h2>


                </div>

            </div>

        </div>
        <!-- end of row -->
        <!-- my custom box row -->

        <div class="name_dropdown">
            <p style="margin-right:180px;">Note Category</p>
            <p>Seller</p>
            <p style="margin-left:120px;">Buyer</pstyle="margin-left:100px;">
        </div>
        <!--======================table with search btn==========================-->
        <!-- table title row -->
        <div class="row">
            <!-- column 01-->
            <div class="col-sm-12">

                <div class="deash_title_btn_table">
                    <div class="name_dropdown">


                        <!-- NoteCategory -->
                        @using (Html.BeginForm("DownloadedNotes", "Admin", FormMethod.Get))
                        {
                            <div>
                                @Html.DropDownList("Category", new SelectList(ViewBag.NotesListforDropdown, "ID", "Name"), new { @class = "form-control", @id = "Ultra", @onchange = "this.form.submit()" })
                            </div>
                        }
                        <!-- Seller -->

                        @using (Html.BeginForm("DownloadedNotes", "Admin", FormMethod.Get))
                        {
                            <div>
                                @Html.DropDownList("Seller", new SelectList(ViewBag.UserData, "ID", "FirstName"), new { @class = "form-control", @id = "Ultra", @onchange = "this.form.submit()" })
                            </div>
                        }

                        <!-- Buyer -->

                        @using (Html.BeginForm("DownloadedNotes", "Admin", FormMethod.Get))
                        {
                            <div>
                                @Html.DropDownList("Buyer", new SelectList(ViewBag.UserData, "ID", "FirstName"), new { @class = "form-control", @id = "Ultra", @onchange = "this.form.submit()" })
                            </div>
                        }

                    </div>

                    <!-- Search form -->
                    <div id="search_btn_drop_aglin">
                        <div id="serach_btn">
                            @using (Html.BeginForm("DownloadedNotes", "Admin", FormMethod.Get))
                            {

                                <input name="DownloadedntsDATA" class="form-control" type="text" placeholder="Search" aria-label="Search">
                                <button type="submit" id="add_note_btn_search">SEARCH</button>
                            }


                        </div>


                    </div>
                </div>

            </div>
            <!-- end of column 01-->
        </div>
        <!-- end of row -->

        <br>
        <!-- Table 01 row -->
        <div class="row">
            <!-- column 01-->
            <div class="col-sm-12">

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>

                                <th scope="col"> NOTE TITLE</th>
                                <th scope="col">CATEGORY</th>
                                <th scope="col">BUYER</th>
                                <th></th>
                                <th scope="col">SELLER</th>
                                <th></th>
                                <th scope="col">SELL TYPE</th>
                                <th scope="col">PRICE</th>
                                <th scope="col">DOWNLOADED DATE/TIME</th>
                                <th scope="col">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var X in Model)
                            {

                                <tr>

                                    <td>@Html.ActionLink(X.NoteTitle, "AdminNoteDetails", "Admin", new { id = X.NoteID }, null)</td>

                                    <td>@X.NoteCategory</td>

                                    @foreach (var uobj in UserData)
                                    {
                                        if (X.Downloader == uobj.ID)
                                        {
                                            <td>@uobj.FirstName  @uobj.LastName</td>

                                        }

                                    }

                                    @*@Html.ActionLink("View More Details", "AboutMember", "Admin", new { MyUserID = X.UserID }, null)*@

                                    <td>
                                        <a href="@Url.Action("AboutMember","Admin", new {  MyUserID = X.Downloader }, null)" style="background-color:transparent; border:none;">
                                            <img src="~/Content/Admin/images/dashboard/eye.png" style="width:25px; height:25px;">
                                        </a>
                                    </td>

                                    @foreach (var uobj in UserData)
                                    {
                                        if (X.Seller == uobj.ID)
                                        {
                                            <td>@uobj.FirstName  @uobj.LastName</td>

                                        }

                                    }


                                    <td>
                                        <a href="@Url.Action("AboutMember","Admin", new {  MyUserID = X.Seller }, null)" style="background-color:transparent; border:none;">
                                            <img src="~/Content/Admin/images/dashboard/eye.png" style="width:25px; height:25px;">
                                        </a>
                                    </td>

                                    @if (X.IsPaid == true)
                                    {
                                        <td>Paid</td>
                                    }
                                    else
                                    {
                                        <td>Free</td>
                                    }

                                    <td>$@X.PurchasedPrice</td>
                                    <td>@X.AttachmentDownloadedDate </td>
                                    <td class="icon_align">

                                        <div class="col-md-6  col-sm-6 col-xs-5 smooth-scroll flex-container">
                                            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="background-color: transparent;">
                                                <img class="icon_more" src="~/Content/Front_Content/images/dashboard/more.png">
                                            </a>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                                @*@Html.ActionLink("My Profile", "MyProfile", "User", new { @class = "dropdown-item" })*@
                                                @*name="noteid" value="@obj.ID"*@
                                                @*<a class="dropdown-item" href="#">Download Notes</a>*@


                                                @Html.ActionLink("Download Notes", "RequestForDownload", "User", new { noteid = X.NoteID }, null)

                                                @Html.ActionLink("View More Details", "AdminNoteDetails", "Admin", new { id = X.NoteID }, null)

                                                @*@Html.ActionLink("Unpublish", "UnpublishNotes", "Admin", new { noteid = X.ID, Seller = X.SellerID, ntsTitle = X.Title }, null)*@

                                            </div>

                                        </div>
                                    </td>

                                </tr>



                            }






                        </tbody>
                    </table>
                </div>
            </div>
            <!-- end of column 01-->
        </div>
        <!-- end of row -->
        <!-- row -->
        <div class="row">
            <!-- column 01-->
            <div class="col-sm-12">

                <center>@Html.PagedListPager(Model, Downloadedntsindex => Url.Action("DownloadedNotes", "Admin", new { Downloadedntsindex, DownloadedntsDATA = Request.QueryString["DownloadedntsDATA"] }))</center>

            </div>
            <!-- end of column 01-->
        </div>
        <!-- end of row <-->
        <!--======================table with search btn + paging==========================-->
    </div>
    <!--  end of container -->
    <center><h4 style="color:green; font-size:18px;">@ViewBag.NoData</h4></center>
</section>

